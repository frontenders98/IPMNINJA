<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Maths Exam - Admin</title>
    <style>
        body {
            background: linear-gradient(135deg, #0d0d0d 0%, #1a1a1a 100%);
            color: #ffffff;
            font-family: 'Segoe UI', sans-serif;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 40px 20px;
        }
        .container {
            width: 90%;
            max-width: 700px;
            display: flex;
            flex-direction: column;
            gap: 20px;
            align-items: center;
        }
        .action-buttons {
            display: flex;
            gap: 15px;
            margin-bottom: 20px;
        }
        .action-button, .logout-button {
            background: #000000;
            color: #ffffff;
            padding: 8px 16px;
            border: 2px solid #ffffff;
            border-radius: 8px;
            font-size: 0.9em;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
            text-align: center;
        }
        .action-button:hover, .logout-button:hover {
            background: #ffffff;
            color: #000000;
            box-shadow: 0 6px 20px rgba(255, 255, 255, 0.2);
            transform: translateY(-2px);
        }
        .logout-button {
            background: #ff3333;
            border-color: #ff6666;
        }
        .logout-button:hover {
            background: #ff6666;
            color: #ffffff;
        }
        .exam-box {
            background-color: #151515;
            border: 3px solid #ffffff33;
            padding: 30px;
            width: 100%;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-radius: 15px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.5);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .exam-box:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.6);
        }
        .exam-left {
            flex: 1;
            padding-right: 30px;
            display: flex;
            flex-direction: column;
        }
        .exam-title {
            font-size: 3.5em;
            margin: 0 0 25px 0;
            color: #ffffff;
            text-shadow: 0 0 10px rgba(255, 255, 255, 0.3);
            font-weight: 700;
        }
        .exam-times {
            display: flex;
            justify-content: space-between;
            max-width: 400px;
        }
        .time-section {
            text-align: center;
            margin-right: 15px;
            position: relative;
        }
        .time-section span {
            display: block;
            color: #ffffff;
            font-size: 1.2em;
            text-shadow: 0 0 5px rgba(255, 255, 255, 0.2);
            margin-bottom: 8px;
        }
        .time-selector {
            position: relative;
            width: 60px;
            height: 40px;
            overflow: hidden;
            background: #222222;
            border-radius: 20px;
            border: 1px solid #ffffff33;
            box-shadow: inset 0 2px 10px rgba(0, 0, 0, 0.3);
        }
        .time-scroll {
            height: 100%;
            position: relative;
            overflow: auto;
            scrollbar-width: none;
            -ms-overflow-style: none;
        }
        .time-scroll::-webkit-scrollbar {
            display: none;
        }
        .time-option {
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #ffffff;
            font-size: 1em;
            transition: all 0.2s ease;
        }
        .time-option.selected {
            font-weight: bold;
            color: #ffffff;
        }
        .time-selector:before, .time-selector:after {
            content: '';
            position: absolute;
            left: 0;
            right: 0;
            height: 15px;
            pointer-events: none;
            z-index: 2;
        }
        .time-selector:before {
            top: 0;
            background: linear-gradient(to bottom, rgba(34, 34, 34, 1) 0%, rgba(34, 34, 34, 0) 100%);
        }
        .time-selector:after {
            bottom: 0;
            background: linear-gradient(to top, rgba(34, 34, 34, 1) 0%, rgba(34, 34, 34, 0) 100%);
        }
        .buttons-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 15px;
        }
        .edit-button, .instruction-edit-button, .delete-button {
            background: #000000;
            color: #ffffff;
            padding: 12px 20px;
            border: 2px solid #ffffff;
            border-radius: 8px;
            font-size: 1em;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
            width: 140px;
            text-align: center;
            letter-spacing: 0.5px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            text-decoration: none;
        }
        .edit-button:hover, .instruction-edit-button:hover, .delete-button:hover {
            background: #ffffff;
            color: #000000;
            box-shadow: 0 6px 20px rgba(255, 255, 255, 0.2);
            transform: translateY(-2px);
        }
        .delete-button {
            background: #ff3333;
            border-color: #ff6666;
        }
        .delete-button:hover {
            background: #ff6666;
            color: #ffffff;
        }
        .popup {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.8);
            justify-content: center;
            align-items: center;
            z-index: 1000;
        }
        .popup-content {
            background: #151515;
            padding: 20px;
            border-radius: 10px;
            width: 90%;
            max-width: 500px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.5);
        }
        .popup-content textarea {
            width: 100%;
            padding: 10px;
            background: #333333;
            border: 1px solid #ffffff33;
            border-radius: 8px;
            color: #ffffff;
            font-size: 1em;
            resize: vertical;
            min-height: 150px;
        }
        .popup-content button {
            margin-top: 10px;
            width: 100%;
            padding: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="action-buttons">
            <button class="action-button" onclick="showCreateModule()">Create Module</button>
            <button class="logout-button" onclick="logout()">Logout</button>
        </div>
        <% modules.forEach(module => { %>
            <div class="exam-box" id="module-<%= module.id %>">
                <div class="exam-left">
                    <h1 class="exam-title"><%= module.name %></h1>
                    <% if (module.name.startsWith('Exam Mode')) { %>
                        <div class="exam-times" id="timer-<%= module.id %>">
                            <div class="time-section">
                                <span>QA</span>
                                <div class="time-selector" data-section="qa">
                                    <div class="time-scroll" id="qa-scroll-<%= module.id %>"></div>
                                </div>
                            </div>
                            <div class="time-section">
                                <span>MCQ</span>
                                <div class="time-selector" data-section="mcq">
                                    <div class="time-scroll" id="mcq-scroll-<%= module.id %>"></div>
                                </div>
                            </div>
                            <div class="time-section">
                                <span>VA</span>
                                <div class="time-selector" data-section="va">
                                    <div class="time-scroll" id="va-scroll-<%= module.id %>"></div>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>
                <div class="buttons-container">
                    <a href="/admin/questions/<%= module.id %>" class="edit-button">
                        <span>✎</span> Add Questions
                    </a>
                    <button class="instruction-edit-button" onclick="showInstructionPopup('<%= module.id %>')">
                        <span>✎</span> Instructions
                    </button>
                    <button class="delete-button" onclick="deleteModule('<%= module.id %>')">Delete</button>
                </div>
            </div>
        <% }) %>
    </div>

    <div class="popup" id="create-module-popup">
        <div class="popup-content">
            <h2>Create New Module</h2>
            <form action="/admin/add-module" method="POST">
                <input type="text" name="name" placeholder="Module Name" required style="margin-bottom: 10px; padding: 10px;">
                <textarea name="instructions" placeholder="Instructions"></textarea>
                <button type="submit">Create</button>
                <button type="button" onclick="hidePopup('create-module-popup')">Cancel</button>
            </form>
        </div>
    </div>

    <div class="popup" id="instruction-popup">
        <div class="popup-content">
            <h2>Edit Instructions</h2>
            <textarea id="instruction-text"></textarea>
            <button onclick="saveInstructions()">Save</button>
            <button onclick="hidePopup('instruction-popup')">Cancel</button>
        </div>
    </div>

    <script>
        const currentTimes = {};
        const modulesData = <%- JSON.stringify(modules) %>;
        let currentModuleId = null;

        modulesData.forEach(module => {
            currentTimes[module.id] = { qa: 40, mcq: 40, va: 40 };
            if (module.name.startsWith('Exam Mode')) {
                const sections = ['qa', 'mcq', 'va'];
                sections.forEach(section => {
                    const scrollContainer = document.getElementById(`${section}-scroll-${module.id}`);
                    if (scrollContainer) {
                        for (let i = 1; i <= 60; i++) {
                            const option = document.createElement('div');
                            option.className = 'time-option';
                            option.textContent = `${i} min`;
                            option.dataset.value = i;
                            if (i === currentTimes[module.id][section]) option.classList.add('selected');
                            scrollContainer.appendChild(option);
                        }
                        setTimeout(() => scrollToSelected(section, module.id), 100);
                        scrollContainer.addEventListener('scroll', () => handleScroll(section, module.id));
                    }
                });
            }
        });

        function scrollToSelected(section, moduleId) {
            const scrollContainer = document.getElementById(`${section}-scroll-${moduleId}`);
            if (scrollContainer) {
                const selectedOption = scrollContainer.querySelector(`.time-option[data-value="${currentTimes[moduleId][section]}"]`);
                if (selectedOption) {
                    scrollContainer.scrollTop = selectedOption.offsetTop - 
                        (scrollContainer.clientHeight / 2) + (selectedOption.clientHeight / 2);
                }
            }
        }

        function handleScroll(section, moduleId) {
            const scrollContainer = document.getElementById(`${section}-scroll-${moduleId}`);
            if (!scrollContainer) return;
            const options = scrollContainer.querySelectorAll('.time-option');
            const containerHeight = scrollContainer.clientHeight;
            const containerCenter = scrollContainer.scrollTop + (containerHeight / 2);
            let closestOption = null;
            let closestDistance = Infinity;
            options.forEach(option => {
                const optionCenter = option.offsetTop + (option.clientHeight / 2);
                const distance = Math.abs(containerCenter - optionCenter);
                if (distance < closestDistance) {
                    closestDistance = distance;
                    closestOption = option;
                }
            });
            if (closestOption) {
                options.forEach(opt => opt.classList.remove('selected'));
                closestOption.classList.add('selected');
                currentTimes[moduleId][section] = parseInt(closestOption.dataset.value);
                clearTimeout(scrollContainer.scrollTimeout);
                scrollContainer.scrollTimeout = setTimeout(() => {
                    scrollContainer.scrollTop = closestOption.offsetTop - 
                        (containerHeight / 2) + (closestOption.clientHeight / 2);
                }, 150);
            }
        }

        function showCreateModule() {
            document.getElementById('create-module-popup').style.display = 'flex';
        }

        function showInstructionPopup(moduleId) {
            currentModuleId = moduleId;
            const module = modulesData.find(m => m.id == moduleId);
            document.getElementById('instruction-text').value = module.instructions || '';
            document.getElementById('instruction-popup').style.display = 'flex';
        }

        function hidePopup(popupId) {
            document.getElementById(popupId).style.display = 'none';
        }

        function saveInstructions() {
            const newInstructions = document.getElementById('instruction-text').value;
            fetch(`/admin/edit-module/${currentModuleId}`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                body: `name=${encodeURIComponent(modulesData.find(m => m.id == currentModuleId).name)}&instructions=${encodeURIComponent(newInstructions)}`
            }).then(response => response.json())
              .then(data => {
                  if (data.success) {
                      modulesData.find(m => m.id == currentModuleId).instructions = newInstructions;
                      hidePopup('instruction-popup');
                      location.reload();
                  } else {
                      alert('Failed to save instructions');
                  }
              }).catch(error => {
                  console.error('Save instructions error:', error);
                  alert('Error saving instructions');
              });
        }

        function deleteModule(moduleId) {
            if (confirm('Delete this module and all its questions?')) {
                console.log(`Deleting module ${moduleId}`);
                fetch(`/admin/delete-module/${moduleId}`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' }
                }).then(response => {
                    console.log('Delete response status:', response.status);
                    return response.json();
                }).then(data => {
                    console.log('Delete response data:', data);
                    if (data.success) {
                        document.getElementById(`module-${moduleId}`).remove();
                    } else {
                        alert(data.message || 'Failed to delete module');
                    }
                }).catch(error => {
                    console.error('Delete module error:', error);
                    alert('Error deleting module');
                });
            }
        }

        function logout() {
            fetch('/admin-logout', { method: 'POST' })
                .then(response => {
                    console.log('Logout response:', response.status);
                    if (response.redirected) {
                        window.location.href = response.url;
                    }
                })
                .catch(error => console.error('Logout error:', error));
        }
    </script>
</body>
</html>